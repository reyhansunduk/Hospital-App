
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2></h2>

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div  style="background-color: #A9AF7E"class="card">
                        <div class="card-body">
                            <h4 class="header-title">Category Create</h4>

                            <div class="row">
                                <div class="col-lg-12">
                                    <form method="post">


                                        <div class="mb-3">
                                            <label for="Name" class="form-label">Category Name</label>
                                            <input type="text" id="Name" name="Name" class="form-control">
                                        </div>

                                        <div class="mb-3">
                                            <label for="IsActive" class="form-label">Is Active</label>
                                            &nbsp;
                                            &nbsp;
                                            &nbsp;
                                            &nbsp;
                                            <input type="checkbox" id="IsActive" name="IsActive" class="form-check-input"
                                                   value="true" data-val="true" checked="checked">
                                        </div>
                                        <br />
                                        <p class="text-blue">@ViewBag.mesaj</p>
                                        <br />
                                        <br />
                                        <button type="submit" class="btn btn-dark">Save</button>

                                    </form>
                                </div> <!-- end col -->
                            </div>
                            <!-- end row-->

                        </div> <!-- end card-body -->
                    </div> <!-- end card -->
                </div><!-- end col -->
            </div>

        </div> <!-- container -->

    </div> <!-- content -->
    <!-- Footer Start -->
    <!-- end Footer -->

</div>