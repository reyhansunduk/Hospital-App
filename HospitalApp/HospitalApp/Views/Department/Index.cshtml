@model List<HospitalApp.Models.Department>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int i = 0;
}

<h2></h2>



<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">


            <!--- end row -->


            <div class="row">


                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">

                            <h4 class="mt-0 header-title">Department Table</h4>
                            <br />
                            <a href="~/Department/Create" class="btn btn-dark mb-4">Department add</a>
                            <br />
                            <div class="table-responsive">
                                <table class="table mb-1">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>#</th>
                                            <th>Name</th>

                                            <th>Is Active</th>

                                            <th>Setting</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Count == 0)
                                        {

                                            <tr>
                                                <td colspan="5">Department is not found.</td>
                                            </tr>
 }
                                        else
                                        {
                                            foreach (var item in Model)
                                            {
                                                i++;
                                                <tr>
                                                    <th scope="row">@i</th>
                                                    <td>@item.Name</td>

                                                    <td>
                                                        <input type="checkbox" class="form-check-input" checked="@item.IsActive"
                                                               value="true" data-val="true" disabled="true" />
                                                    </td>

                                                    <td>

                                                        <a href="~/Department/Edit/@item.Id" class=" fa fa-edit "></a>

                                                    </td>
                                                </tr>
}


                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>


                </div>
            </div>


        </div> <!-- container-fluid -->
    </div> <!-- content -->
    <!-- Footer Start -->
    <!-- end Footer -->

</div>