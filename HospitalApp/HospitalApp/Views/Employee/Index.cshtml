@model HospitalApp.Models.ViewModels.EmployeeMultiModel
@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int i = 0; }

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">


            <!--- end row -->


            <div class="row">


                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">

                            <h4 class="mt-0 header-title">Employee Table</h4>
                            <br />
                            <a href="~/Employee/Create" class="btn btn-dark mb-4">Employee Add</a>
                            <br />
                            <div class="table-responsive">
                                <table class="table mb-1">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>#</th>
                                            <th>Category</th>
                                            <th>Room</th>
                                            <th>Department</th>
                                            <th>Name</th>
                                            <th>Surname</th>
                                            <th>Is Active</th>

                                            <th>Setting</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Employees.Count == 0)
                                        {

                            <tr>
                                <td colspan="5">Employee is not found.</td>
                            </tr>
 }
                        else
                        {
                            foreach (var item in Model.Employees)
                            {
                                i++;
                                    <tr>
                                        <th scope="row">@i</th>
                                        <td>@item.CategoryId</td>
                                        <td>@item.RoomId</td>
                                        <td>@item.DepartmentId</td>
                                        <td>@item.Name</td>
                                        <td>@item.Surname</td>


                                        <td>

                                            <input type="checkbox" class="form-check-input" checked="@item.IsActive"
                                                   value="true" data-val="true" disabled="true" />
                                        </td>
                                        <td>
                                            <a href="~/Employee/Edit/@item.Id" class=" fa fa-edit "></a>

                                            &nbsp;|&nbsp;
                                            <a href="~/Employee/Delete/@item.Id" class=" fa fa-trash-o"></a>
                                        </td>
                                    </tr>
}


    }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>


                </div>
            </div>


        </div> <!-- container-fluid -->
    </div> <!-- content -->
    <!-- Footer Start -->
    <!-- end Footer -->

</div>