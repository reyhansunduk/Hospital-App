@model HospitalApp.Models.ViewModels.PatientRegMultiModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">


            <!--- end row -->


            <div class="row">


                <div class="col-lg-12">
                    <div style="background-color: #A9AF7E" class="card">
                        <div class="card-body">
                            <h4 class="header-title">PatientRegistration Create</h4>

                            <div class="row">
                                <div class="col-lg-12">
                                    <form method="post">

                                        <div class="mb-3">
                                            <label for="Patient" class="form-label ">Patient</label>
                                            <select id="PatientId" name="PatientId" class="form-control ">
                                                <optgroup>
                                                    <option value="@Model.PatientRegistration.Patient.Id">@Model.PatientRegistration.Patient.Name</option>
                                                </optgroup>
                                                @foreach (var item in Model.Patients)
                                                {
                                                    <option value="@item.Id">@item.Name</option>
                                                }

                                            </select>

                                        </div>
                                        <div class="mb-3">
                                            <label for="Employee" class="form-label ">Employee</label>
                                            <select id="EmployeeId" name="EmployeeId" class="form-control ">
                                                <optgroup>
                                                    <option value="@Model.PatientRegistration.Employee.Id">@Model.PatientRegistration.Employee.Name</option>
                                                </optgroup>
                                                @foreach (var item in Model.Employees)
                                                {
                                                    <option value="@item.Id">@item.Name</option>
                                                }

                                            </select>

                                        </div>
                                        <div class="mb-3">
                                            <label for="User" class="form-label ">User</label>
                                            <select id="UserId" name="UserId" class="form-control ">
                                                <optgroup>
                                                    <option value="@Model.PatientRegistration.User.Id">@Model.PatientRegistration.User.Name</option>
                                                </optgroup>
                                                @foreach (var item in Model.Users)
                                                {
                                                    <option value="@item.Id">@item.Name</option>
                                                }

                                            </select>

                                        </div>

                                        <div class="mb-3">
                                            <label for="Procedure" class="form-label ">Procedure</label>
                                            <select id="ProcedureId" name="ProcedureId" class="form-control ">
                                                <optgroup>
                                                    <option value="@Model.PatientRegistration.Procedure.Id">@Model.PatientRegistration.Procedure.Name</option>
                                                </optgroup>
                                                @foreach (var item in Model.Procedures)
                                                {
                                                    <option value="@item.Id">@item.Name</option>
                                                }

                                            </select>

                                        </div>

                                        <div class="mb-3">
                                            <label for="TotalPrice" class="form-label">TotalPrice</label>
                                            <input type="number" value="@Model.PatientRegistration.TotalPrice id="TotalPrice" name="TotalPrice" class="form-control">
                                        </div>

                                        <div class="mb-3">
                                            <label for="DateHour" class="form-label">DateHour</label>
                                            <input type="datetime-local" value="@Model.PatientRegistration.DateHour id="DateHour" name="DateHour" class="form-control">
                                        </div>


                                        <br />
                                        <div class="mb-3">
                                            <label for="IsActive" class="form-label">Is Active</label>
                                            &nbsp;
                                            &nbsp;
                                            &nbsp;
                                            &nbsp;
                                            <input type="checkbox" id="IsActive" name="IsActive" class="form-check-input"
                                                   value="true" data-val="true" checked="@Model.PatientRegistration.TotalPrice">
                                        </div>
                                        <br />
                                        <input type="hidden" name="Id" id="Id" value="@Model.PatientRegistration.Id" />
                                        <p class="text-blue">@ViewBag.mesaj</p>
                                        <br />
                                        <br />
                                        <button type="submit" class="btn btn-dark">Save</button>

                                    </form>
                                </div> <!-- end col -->
                            </div>
                            <!-- end row-->

                        </div> <!-- end card-body -->
                    </div>
                </div>


            </div>
        </div>


    </div> <!-- container-fluid -->
</div> <!-- content -->
