@model HospitalApp.Models.ViewModels.PatientRegMultiModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int i = 0;
}


<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">


            <!--- end row -->


            <div class="row">


                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">

                            <h4 class="mt-0 header-title">PatientRegistration Table</h4>
                            <br />
                            <a href="~/PatientRegistration/Create" class="btn btn-dark mb-4">PatientRegistration Add</a>
                            <br />
                            <div class="table-responsive">
                                <table class="table mb-1">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>#</th>
                                            <th>Id</th>
                                            <th>Patient</th>
                                            <th>User</th>
                                            <th>Employee</th>
                                            <th>Procedure</th>
                                            <th>Total Price</th>
                                            <th>DateHour</th>
                                            <th>Is Active</th>
                                            <th>Setting</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.PatientRegistrations.Count == 0)
                                        {

                                            <tr>
                                                <td colspan="5">PatientRegistration is not found.</td>
                                            </tr>
 }
                                        else
                                        {
                                            foreach (var item in Model.PatientRegistrations)
                                            {
                                                i++;
                                    <tr>
                                        <th scope="row">@i</th>
                                        <td>@item.Id</td>
                                        <td>@item.PatientId</td>
                                        <td>@item.UserId</td>
                                        <td>@item.EmployeeId</td>
                                        <td>@item.ProcedureId</td>
                                        <td>@item.TotalPrice</td>
                                        <td>@item.DateHour</td>
                                   


                                        <td>

                                            <input type="checkbox" class="form-check-input" checked="@item.IsActive"
                                                   value="true" data-val="true" disabled="true" />
                                        </td>
                                        <td>
                                            <a href="~/PatientRegistration/Edit/@item.Id" class=" fa fa-edit "></a>

                                            &nbsp;|&nbsp;
                                            <a href="~/PatientRegistration/Delete/@item.Id" class=" fa fa-trash-o"></a>
                                        </td>
                                    </tr>
}


                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>


                </div>
            </div>


        </div> <!-- container-fluid -->
    </div> <!-- content -->
    <!-- Footer Start -->
    <!-- end Footer -->

</div>

