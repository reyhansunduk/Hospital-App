@model HospitalApp.Models.ViewModels.RoomMultiModel
@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int i = 0; }

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">


            <!--- end row -->


            <div class="row">


                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">

                            <h4 class="mt-0 header-title">Room Table</h4>
                            <br />
                            <a href="~/Room/Create" class="btn btn-dark mb-4">Room Add</a>
                            <br />
                            <div class="table-responsive">
                                <table class="table mb-1">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>#</th>
                                            <th>Department</th>
                                            <th>Room Name</th>
                                            <th>Capacity</th>
                                            <th>State</th>
                                            <th>Room Price</th>
                                            <th>Is Active</th>
                                            <th>Setting</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Rooms.Count == 0)
                                        {

                            <tr>
                                <td colspan="5">Room is not found.</td>
                            </tr>
 }
                        else
                        {
                            foreach (var item in Model.Rooms)
                            {
                                i++;
            <tr>
                <th scope="row">@i</th>
                <td>@item.DepartmentId</td>
                <td>@item.Name</td>
                <td>@item.Capacity</td>
                <td>@item.State</td>
                <td>@item.RoomPrice</td>

                <td>

                    <input type="checkbox" class="form-check-input" checked="@item.IsActive"
                           value="true" data-val="true" disabled="true" />
                </td>
                <td>
                    <a href="~/Room/Edit/@item.Id" class=" fa fa-edit "></a>

                    &nbsp;|&nbsp;
                    <a href="~/Room/Delete/@item.Id" class=" fa fa-trash-o"></a>
                </td>
            </tr>
}


    }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>


                </div>
            </div>


        </div> <!-- container-fluid -->
    </div> <!-- content -->
    <!-- Footer Start -->
    <!-- end Footer -->

</div>